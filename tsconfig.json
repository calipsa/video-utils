{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "alwaysStrict": true,
    // "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    // "noImplicitAny": true, // uncomment when tmp types are fixed
    "downlevelIteration": true,
    "lib": [
      "esnext"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "text"
  ]
}
